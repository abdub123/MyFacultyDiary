<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001f3f"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faculty Diary"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <ImageView
        android:id="@+id/imgContact"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/contact_icon" />

    <Button
        android:id="@+id/btnContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgContact"
        android:layout_marginTop="-91dp"
        android:backgroundTint="#004080"
        android:text="Contact"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imgCourses"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/btnContact"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/courses_icon" />

    <Button
        android:id="@+id/btnCourses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgCourses"
        android:layout_marginTop="11dp"
        android:backgroundTint="#004080"
        android:text="Courses"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imgEvents"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/btnCourses"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/events_icon" />

    <Button
        android:id="@+id/btnEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgEvents"
        android:layout_marginTop="15dp"
        android:backgroundTint="#004080"
        android:text="Events"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imgNews"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/btnEvents"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/news_icon" />

    <Button
        android:id="@+id/btnNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgNews"
        android:layout_marginTop="29dp"
        android:backgroundTint="#004080"
        android:text="News"
        android:textColor="#FFFFFF" />
</RelativeLayout>




